{
  "name": "responsive-sidebar",
  "version": "1.0.0",
  "description": "Responsive sidebar template",
  "main": "index.html",
  "scripts": {
    "build:jade": "jade src -o dist",
    "watch:jade": "jade src -o dist -w",
    "build:sass": "node-sass src/sass -o dist/css",
    "watch:sass": "node-sass src/sass -o dist/css -w",
    "prebuild:babel": "mkdirp dist/js",
    "build:babel": "babel src/js/ --out-file dist/js/scripts.js --source-maps inline",
    "watch:babel": "babel src/js/ --out-file dist/js/scripts.js --source-maps inline -w",
    "copy:assets": "ncp src/assets dist/assets",
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "parallelshell \"npm run build:jade\" \"npm run build:sass\" \"npm run build:babel\"",
    "build:dev": "parallelshell \"npm run build:jade\" \"npm run build:sass\" \"npm run build:babel\"",
    "postbuild": "npm run copy:assets",
    "serve": "http-server dist/",
    "live-reload": "live-reload dist/ --port=3000",
    "serve:dev": "parallelshell \"npm run serve\" \"npm run live-reload\"",
    "prewatch": "mkdirp dist/js",
    "watch": "parallelshell \"npm run watch:jade\" \"npm run watch:sass\" \"npm run watch:babel\"",
    "dev": "parallelshell \"npm run serve:dev\" \"npm run watch\""
  },
  "author": "mahpahh",
  "license": "ISC",
  "devDependencies": {
    "babel": "^5.8.23",
    "cz-conventional-changelog": "^1.1.2",
    "http-server": "^0.8.4",
    "jade": "^1.11.0",
    "live-reload": "^1.1.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.3.3",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.4.3"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog/"
  }
}

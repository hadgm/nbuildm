{
  "name": "responsive-sidebar",
  "version": "1.0.0",
  "description": "Responsive sidebar template",
  "main": "index.html",
  "scripts": {
    "build:jade": "jade src -o dist",
    "build:sass": "node-sass src/sass -o dist/css",
    "prebuild:babel": "mkdirp dist/js",
    "build:babel": "babel src/js/ --out-file dist/js/scripts.js --source-maps inline",
    "copy:assets": "ncp src/assets dist/assets",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "parallelshell \"npm run build:jade\" \"npm run build:sass\" \"npm run build:babel\" \"npm run copy:assets\""
  },
  "author": "mahpahh",
  "license": "ISC",
  "devDependencies": {
    "babel": "^5.8.23",
    "http-server": "^0.8.3",
    "jade": "^1.11.0",
    "live-reload": "^1.1.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.3.3",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.4.3"
  }
}
